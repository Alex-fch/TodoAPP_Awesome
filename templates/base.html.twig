<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{{ 'general.title.welcome' | trans }}
			{% endblock %}
		</title>
		<link href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.0/lumen/bootstrap.min.css" rel="stylesheet" integrity="sha384-VMuWne6iwiifi8iEWNZMw8sDatgb6ntBpBIr67q0rZAyOQwfu/VKpnFntQrjxB5W" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
		<link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
				<a class="navbar-brand" href="{{ path('home') }}">{{ 'general.title.brand' | trans }}</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavDropdown">
					<ul class="navbar-nav">
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('home') }}">{{ 'general.navbar.home' | trans }}
							</a>
						</li>
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li class="nav-item active">
								<a class="nav-link" href="{{ path('calendar') }}">{{ 'general.navbar.calendar' | trans }}
								</a>
							</li>
							{# Menu Export PDF #}
							<li class="nav-item">
								<a href="{{ path('tasks_pdf') }}" class="nav-link" target="_blank">{{ 'nav.pdf' | trans }}</a>
							</li>
						{% endif %}

					</ul>
					<ul
						class="navbar-nav ml-auto">
						{# Si on est connect√© #}
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							{# on affiche #}
							<li class="nav-item text-light d-flex align-items-center">
								{{ 'connexion.phrase' | trans }}
								{{ app.user.email }}
							</li>
							<li class="nav-item ml-3">
								<a class="nav-link" href="{{ path('app_logout') }}">{{ 'general.navbar.logout' | trans }}</a>
							</li>

							{# Sinon #}
						{% else %}
							{# On affiche #}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">{{ 'general.navbar.login' | trans }}</a>
							</li>
						{% endif %}
					</ul>
					{# Boutons de langue #}
					{% set route = app.request.attributes.get('_route') %}
					{% set route_params = app.request.attributes.get('_route_params') %}
					{% set params = route_params|merge(app.request.query.all) %}

					{% set lang = locales|split('|') %}
					{% for locale in lang %}
						{% if locale != app.request.locale %}
							<span class="nav-item">
								<a class="btn btn-info ml-1" href="{{ path(route, params|merge({ _locale: locale })) }}">{{ locale }}</a>
							</span>
						{% endif %}
					{% endfor %}

				</div>
			</nav>
		</header>

		{% include "/utils/flash.html.twig" %}

		{% block body %}{% endblock %}
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
