{% extends 'base.html.twig' %}

{% block title %}Liste des tags
{% endblock %}

{% block steelsheets %}
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.21/datatables.min.css"/>
{% endblock %}

{% block body %}
	<div class="container">
		<a href="{{ path('tag_create') }}" class="btn btn-primary">Ajouter une cat√©gorie</a>
		<table class="table table-striped table-borderer" id="tagsTable">
			<thead>
				<th>Id</th>
				<th>Nom</th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				{% if tags is defined %}
					{% for tag in tags %}
						<tr>
							<th scope="row">{{ tag.id }}</th>
							<td>{{ tag.name }}</td>
							<td>
								<a href="{{ path('tag_update', {'id': tag.id }) }}" class="btn btn-success">Modifier</a>
							</td>
							{% if tag.getTask()[0] is defined %}
								<td></td>
							{% else %}
								<td>
									<a href="{{ path('tag_delete', {'id': tag.id }) }}" class="btn btn-danger">Supprimer</a>
								</td>
							{% endif %}
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block javascripts %}
	<script>
		$(document).ready(function () {
$('#tagsTable').DataTable();
});
	</script>
{% endblock %}
